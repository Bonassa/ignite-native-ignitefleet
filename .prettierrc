{
  "printWidth": 80,
  "tabWidth": 2,
  "singleQuote": true,
  "semi": true,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",

  "importOrder": [
    "^(react$)|^(react-native$)",
    "<THIRD_PARTY_MODULES>",
    "^(@components/(.*)$)|^(.*)$/components/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}